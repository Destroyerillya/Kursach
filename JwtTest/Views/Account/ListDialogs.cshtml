@model IEnumerable<JwtTest.EF.Person>
@{
    ViewData["Title"] = "Диалоги";
}
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Avatar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="/Account/Avatar?username=@item.Login" alt="Аватар" height="20" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                <a class="nav-link text-dark" asp-action="GetPersonalDialog" asp-route-id="@item.Id">Написать сообщение</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
